{
  "name": "o-keyboard",
  "version": "0.2.0",
  "private": false,
  "description": "Virtual Keyboard for Javascript â€“ Modern, customizable and lightweight.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./data/layouts": {
      "import": "./dist/data/layouts/*.js",
      "require": "./dist/data/layouts/*.cjs"
    },
    "./data/tables": {
      "import": "./dist/data/tables.js",
      "require": "./dist/data/tables.cjs"
    }
  },
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "build:esm": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.js --metafile=dist/meta.json",
    "build:cjs": "esbuild src/index.js --bundle --format=cjs --outfile=dist/index.cjs",
    "build:data:esm": "esbuild src/data/layouts/*.js --bundle=false --format=esm --outdir=dist/data/layouts && esbuild src/data/tables/**/*.js --bundle=false --format=esm --outdir=dist/data/tables",
    "build:data:cjs": "esbuild src/data/layouts/*.js --bundle=false --format=cjs --outdir=dist/data/layouts --out-extension:.js=.cjs && esbuild src/data/tables/**/*.js --bundle=false --format=cjs --outdir=dist/data/tables --out-extension:.js=.cjs",
    "build": "npm run build:esm && npm run build:cjs && npm run build:data:esm && npm run build:data:cjs",
    "minify": "esbuild src/index.js --bundle --minify --format=esm --outfile=dist/index.min.js",
    "minify:data": "esbuild src/data/layouts/*.js --bundle=false --minify --format=esm --outdir=dist/data/layouts --out-extension:.js=.min.js && esbuild src/data/tables/**/*.js --bundle=false --minify --format=esm --outdir=dist/data/tables --out-extension:.js=.min.js",
    "dist": "npm run build && npm run minify && npm run minify:data && node ./scripts/copy-types.cjs && node ./scripts/copy-static.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuriyapostol/o-keyboard.git"
  },
  "keywords": [
    "keyboard",
    "virtual-keyboard",
    "on-screen-keyboard",
    "key",
    "button",
    "input",
    "typing",
    "virtual",
    "on-screen",
    "ui",
    "component",
    "frontend",
    "javascript",
    "js"
  ],
  "author": "Yuriy Apostol",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.27.0"
  }
}
